<aside class="col-md-12">
  <section class="user_info">
    <span class="avatar"><%= gravatar_for(@user) %></span>
    <span class="info_box">
        <h1>
            <%= @user.name %>
        </h1>
      <%= render "follow_form" if logged_in? %>
      <%= render "shared/stats" %>
      <h2>
          <p>Email: <%= @user.email %><br/>
          Created at: <%= @user.created_at %><br/>
          Last update at: <%= @user.updated_at %></p>
        </h2>
      </span>
  </section>
</aside>
